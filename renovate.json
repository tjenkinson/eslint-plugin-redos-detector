{
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "prHourlyLimit": 0,
  "prCreation": "not-pending",
  "prConcurrentLimit": 0,
  "stabilityDays": 7,
  "vulnerabilityAlerts": true,
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchPackageNames": ["redos-detector"],
      "stabilityDays": 0
    },
    {
      "matchDepTypes": ["devDependencies"],
      "rangeStrategy": "pin"
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "rangeStrategy": "widen"
    }
  ]
}
